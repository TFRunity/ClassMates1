@using ClassMates.Models 
@using System.Globalization
@model IEnumerable<Student>

@{
    //Рандомные люди, может повторяться, надо придумать как сделать так, чтобы не повторялось.

    Random stu = new Random();
    //Рандомные люди
    int sfirst = stu.Next(30);
    int ssecond = stu.Next(30);
    int sthird = stu.Next(30);
    //Присвоение
    Student Firststudent = Model.ElementAt(sfirst);
    Student Secondstudent = Model.ElementAt(ssecond);
    Student Thirdstudent = Model.ElementAt(sthird);
    //Форматирование времени
    string fsdate = Firststudent.DateBirth.ToString("d", CultureInfo.CreateSpecificCulture("de-DE"));
    string ssdate = Secondstudent.DateBirth.ToString("d", CultureInfo.CreateSpecificCulture("de-DE"));
    string tsdate = Thirdstudent.DateBirth.ToString("d", CultureInfo.CreateSpecificCulture("de-DE"));
}
<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class="active" aria-current="true"></button>
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3" class=""></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active carousel-item-start">
          @*Вывод фотки(я не виноват, что такое мыло)*@
        <img src ="/images/Obchie/17.jpg" />
      </div>
      <div class="carousel-item carousel-item-next carousel-item-start">
        <img src ="/images/Obchie/17.jpg" />
      </div>
      <div class="carousel-item">
       <img src ="/images/Obchie/17.jpg" />
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <!-- Отредактировать -->
    <div class="container marketing">

    <div class="row featurette">
      <div class="col-md-7">
        <h2 class="featurette-heading" @Firststudent.Name <h2/>
        <a href="@Url.Action("PersonPage","MainHub", new {Id = Firststudent.Id })"> @Firststudent.Name </a>
            <h3><span class="text-muted">@Firststudent.FutureJob</span></h3>
            <h3><span class="text-muted">День рождения: @fsdate</span></h3>
        <h3><p class="lead">@Firststudent.Description</p></h3>
      </div>
      <div class="col-md-5">
        <img src ="@Firststudent.MainImg" width="500" height="500" focusable="false" />
      </div>
    </div>

    <hr class="featurette-divider">

    <div class="row featurette">
      <div class="col-md-7 order-md-2">
        <h2 class="featurette-heading text-end" @Secondstudent.Name <h2/>
        <a href="@Url.Action("PersonPage","MainHub", new {Id = Secondstudent.Id })"> @Secondstudent.Name </a>
            <h3 class="text-rights"><span class="text-muted"> @Secondstudent.FutureJob</span></h3>
            <h3 class="text-rights"><span class="text-muted"> День рождения: @ssdate</span></h3>
        <h3><p class="lead">@Secondstudent.Description</p></h3>
      </div>
      <div class="col-md-5">
        <img src ="@Secondstudent.MainImg" width="500" height="500" focusable="false" />
      </div>
    </div>

    <hr class="featurette-divider">

    <div class="row featurette">
      <div class="col-md-7">
        <h2 class="featurette-heading" @Thirdstudent.Name <h2/>
        <a href="@Url.Action("PersonPage","MainHub", new {Id = Thirdstudent.Id })"> @Thirdstudent.Name </a>
            <h3><span class="text-muted">@Thirdstudent.FutureJob</span></h3>
            <h3><span class="text-muted">День рождения: @tsdate</span></h3>
        <h3><p class="lead">@Thirdstudent.Description</p></h3>
      </div>
      <div class="col-md-5">
        <img src ="@Thirdstudent.MainImg" width="500" height="500" focusable="false"/>

      </div>
    </div>
    <hr class="featurette-divider">
