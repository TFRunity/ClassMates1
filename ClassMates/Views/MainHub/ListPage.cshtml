@using ClassMates.Models 
@model IEnumerable<Student>

@{
    foreach(Student student in Model)
    {
        string tsdate = student.DateBirth.ToString("d");
                <div class="container marketing">
                    <div class="row featurette">
                    <div class="col-md-7">
                    <h2 class="featurette-heading" @student.Name />
                    <a href="@Url.Action("PersonPage","MainHub", new {Id = student.Id })"> @student.Name </a>
                        <h3><span class="text-muted">@student.FutureJob</span></h3>
                        <h3><span class="text-muted">День рождения: @tsdate</span></h3>
                    <h3><p class="lead">@student.Description</p></h3>
                 </div>
                 <div class="col-md-5">
                    <img src ="@student.MainImg" width="500" height="500" focusable="false" />
                </div>
                </div>
                </div>
        <hr class="featurette-divider">
    }
}
